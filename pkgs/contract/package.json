{
  "name": "@amm-dex/contract",
  "version": "1.0.0",
  "description": "AMM DEX スマートコントラクト",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "GAS_REPORT=true hardhat test",
    "deploy": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:enhanced": "hardhat run scripts/deployWithHelper.ts --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.ts --network hardhat",
    "deploy:local:enhanced": "hardhat run scripts/deployWithHelper.ts --network hardhat",
    "ignition:deploy": "hardhat ignition deploy ignition/modules/FullDeployment.ts",
    "ignition:deploy:sepolia": "hardhat ignition deploy ignition/modules/FullDeployment.ts --network sepolia",
    "ignition:deploy:localhost": "hardhat ignition deploy ignition/modules/FullDeployment.ts --network localhost",
    "ignition:deploy:core": "hardhat ignition deploy ignition/modules/CoreContracts.ts",
    "ignition:deploy:tokens": "hardhat ignition deploy ignition/modules/TestTokens.ts",
    "ignition:script:all": "ts-node ignition/deploy-all.ts",
    "ignition:script:sepolia": "ts-node ignition/deploy-sepolia.ts --network sepolia",
    "ignition:verify": "ts-node ignition/verify-deployment.ts",
    "deployment:build": "npx tsc scripts/deploymentManager.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --skipLibCheck",
    "deployment:summary": "npm run deployment:build && node dist/scripts/deploymentManager.js summary",
    "deployment:export": "npm run deployment:build && node dist/scripts/deploymentManager.js export",
    "deployment:backup": "npm run deployment:build && node dist/scripts/deploymentManager.js backup",
    "deployment:compare": "npm run deployment:build && node dist/scripts/deploymentManager.js compare",
    "deployment:list": "npm run deployment:build && node dist/scripts/deploymentManager.js list",
    "deployment:networks": "npm run deployment:build && node dist/scripts/deploymentManager.js networks",
    "verify": "hardhat verify --network sepolia",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol'",
    "format:check": "prettier --check 'contracts/**/*.sol'",
    "clean": "hardhat clean",
    "typechain": "hardhat compile"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^2.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-viem": "^1.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.4.3",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.6",
    "@types/commander": "^2.12.5",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.10.6",
    "chai": "^4.2.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "viem": "^1.21.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  }
}
