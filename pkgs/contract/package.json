{
  "name": "@amm-dex/contract",
  "version": "1.0.0",
  "private": true,
  "description": "AMM DEX Smart Contracts",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "deploy:factory": "npx hardhat run ignition/AMMFactory.ts",
    "deploy:router": "npx hardhat run ignition/AMMRouter.ts",
    "deploy:all": "npx hardhat run ignition/deployAll.ts",
    "verify": "npx hardhat run verify",
    "lint": "npx solhint 'contracts/**/*.sol'",
    "lint:fix": "npx solhint 'contracts/**/*.sol' --fix",
    "size": "npx hardhat size-contracts",
    "clean": "npx hardhat clean",
    "task:create-pair": "npx hardhat createPair",
    "task:create-all-pairs": "npx hardhat createAllPairs",
    "task:get-pair": "npx hardhat getPair",
    "task:get-all-pairs": "npx hardhat getAllPairs",
    "task:get-target-pairs": "npx hardhat getTargetPairs",
    "task:add-liquidity:pair": "npx hardhat addLiquidityToPair",
    "task:remove-liquidity:pair": "npx hardhat removeLiquidityFromPair",
    "task:remove-all-liquidity:pair": "npx hardhat removeAllLiquidity",
    "task:add-liquidity:router": "npx hardhat addLiquidityViaRouter",
    "task:remove-liquidity:router": "npx hardhat removeLiquidityViaRouter",
    "task:swap-exact:router": "npx hardhat swapExactTokensViaRouter",
    "task:swap-for-exact:router": "npx hardhat swapTokensForExactViaRouter",
    "task:swap:pair": "npx hardhat swapTokens",
    "task:quote:pair": "npx hardhat getSwapQuote",
    "task:verify:factory": "npx hardhat verify:factory",
    "task:verify:router": "npx hardhat verify:router",
    "task:verify:all": "npx hardhat verify:contracts"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "hardhat",
    "amm",
    "dex",
    "defi"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.4",
    "@openzeppelin/hardhat-upgrades": "^3.4.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@types/chai": "^4.3.19",
    "@types/jsonfile": "^6.1.4",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.12",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.2.1",
    "jsonfile": "^6.1.0",
    "solhint": "^5.0.3",
    "typescript": "^5.6.2",
    "viem": "^2.21.19"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  }
}
