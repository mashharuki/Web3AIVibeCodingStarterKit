{
  "name": "contract",
  "version": "1.0.0",
  "description": "AMM DEX スマートコントラクト",
  "private": true,
  "scripts": {
    "build": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:DEXFactory": "npx hardhat ignition deploy ignition/modules/DEXFactoryModule.ts",
    "deploy:TestToken": "npx hardhat ignition deploy ignition/modules/TestTokenModule.ts",
    "verify": "npx hardhat verify",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'tasks/**/*.ts' 'hardhat.config.ts'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'test/**/*.ts' 'tasks/**/*.ts' 'hardhat.config.ts'",
    "clean": "npx hardhat clean && rm -rf typechain-types",
    "coverage": "npx hardhat coverage",
    "gas-report": "REPORT_GAS=true npx hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.2",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "jsonfile": "^6.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
