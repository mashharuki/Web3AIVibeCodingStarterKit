{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node"
  },
  "include": [
    "./contracts/**/*",
    "./test/**/*",
    "./ignition/**/*",
    "./tasks/**/*",
    "./helpers/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": ["node_modules", "dist", "artifacts", "cache", "typechain-types"]
}
